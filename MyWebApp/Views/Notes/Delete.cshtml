@*
    Delete note page
*@

@{
    ViewData["Title"] = "Delete the note";
}

@model DeleteNoteViewModel

@if (User.IsAuthenticated())
{
    var noteDetails = Model.NoteDetails;

    if (noteDetails == null ||
        noteDetails.Note == null)
    {
        <h2>There is nothing to delete.</h2>

        return;
    }

    var note = noteDetails.Note;
    var thread = noteDetails.Thread;
    var images = noteDetails.Images;
    var author = noteDetails.Author;
    var authorProfilePicture = noteDetails.ProfilePicture;

    <h2>Are you sure you want to delete this note?</h2>

    <div>
        @if (author != null)
        {
            <img width="100" height="100" src="@ImagePathHelper.GetPath(authorProfilePicture.ImageFileName)" asp-append-version="true"/>
            <a asp-controller="Users" asp-action="Details" asp-route-userId="@author.Id" class="btn btn-sm btn-outline-secondary">Author: @author.UserName</a>
        }
        else
        {
            <img width="100" height="100" src="@ImagePathHelper.GetDefaultImagePath()" asp-append-version="true"/>
            <a class="btn btn-sm btn-outline-secondary">Unknown author</a>
        }
    </div>

    <div>
        <input type="hidden" value="NoteId" id="NoteId"/>
        <div class="form-group">
            <label asp-for="@note.Title">Title</label>
            <input asp-for="@note.Title" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="@note.Description">Description</label>
            <input asp-for="@note.Description" class="form-control" readonly/>
        </div>

        @foreach (var image in images)
        {
            <img src="@ImagePathHelper.GetPath(image.ImageFileName)" asp-append-version="true"/>
        }

        @if (thread != null)
        {
            <h4>Thread:</h4>
            <a asp-controller="Threads" asp-action="GetByThread" asp-route-thread="@thread.Thread" class="btn btn-sm btn-outline-secondary">@thread.Thread</a>
        }
    </div>

    <form method="post" asp-action="Delete">
        <button type="submit" class="btn btn-danger float-right mt-3">Delete</button>
    </form>
}
else
{
    <div class="row">
        <span>
            You are not logged in!
        </span>
    </div>
}