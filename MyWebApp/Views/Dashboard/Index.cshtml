@*
    Dashboard page
*@

@inject LanguageService LanguageService
@inject ImagePathHelper ImagePathHelper

@{
    ViewData["Title"] = LanguageService.GetKey("Dasboard_Title");
}

@model DashboardViewModel

@if (Model == null ||
    !User.IsAuthenticated())
{
    <h3>@LanguageService.GetKey("Dashboard_NotFound")</h3>
}
else
{
    var notesDetails = Model.UserNotes;
    var user = Model.User;
    var profilePicture = Model.ProfilePicture;
    var pagingVM = Model.PagingViewModel;

    <h2>@LanguageService.GetKey("YourDashboard"): <b>@user.UserName</b></h2>
    <div>
        <div class="thumb">
            <a class="fancybox-frame profile-picture" data-fancybox href="@ImagePathHelper.GetHref(profilePicture.ImageFileName)">
                <img src="@ImagePathHelper.GetPath(profilePicture.ImageFileName)" asp-append-version="true">
            </a>
        </div>
        <a asp-controller="Users" asp-action="Details" asp-route-userId="@user.Id" class="btn btn-sm btn-outline-secondary">@user.UserName</a>
        <h3>@user.Status</h3>
    </div>

    <div>
        <a asp-controller="Dashboard" asp-action="EditUserProfile" class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("EditProfile")</a>
    </div>

    var noteNumber = 0;

    if (!notesDetails.Any())
    {
        <h3>@LanguageService.GetKey("Dashboard_NoNotes")</h3>
    }
    else
    {
        <h3>@LanguageService.GetKey("Notes") (@notesDetails.Count())</h3>

        @foreach (var noteDetail in notesDetails)
        {
            var note = noteDetail.Note;
            if (note == null)
            {
                continue;
            }

            <h3>@note.Title</h3>
            <h4>@note.Description</h4>

            var images = noteDetail.Images;
            var thread = noteDetail.Thread;

            <div class="gallery-column">
                @foreach (var image in images)
                {
                    var imagePath = ImagePathHelper.GetPath(image.ImageFileName);
                    var href = ImagePathHelper.GetHref(image.ImageFileName);

                    <div class="thumb">
                        <a class="fancybox-frame" data-fancybox="gallery-@noteNumber" href="@href">
                            <img src="@imagePath" asp-append-version="true">
                        </a>
                    </div>
                }
            </div>

            @if (thread != null)
            {
                <h4>@LanguageService.GetKey("Thread"):</h4>
                <a asp-controller="Threads" asp-action="GetByThread" asp-route-thread="@thread.Thread" class="btn btn-sm btn-outline-secondary">@thread.Thread</a>
            }

            <div>
                @if (User.IsAdmin() ||
                    User.IsOwner(note))
                {
                    <a asp-controller="Notes" asp-action="Edit" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("Edit")</a>
                    <a asp-controller="Notes" asp-action="Delete" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("Delete")</a>
                }

                <a asp-controller="Notes" asp-action="Details" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("Details")</a>
            </div>

            noteNumber += 1;
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                @if (pagingVM.IsValidPage)
                {
                    <a class="btn btn-sm btn-outline-primary @pagingVM.PrevDisabled" asp-controller="Dashboard" asp-action="Index" asp-route-page="@(pagingVM.Page - 1)">
                        @LanguageService.GetKey("PaginationResults_Prev")
                    </a>
                    <a class="btn btn-sm btn-outline-primary @pagingVM.NextDisabled" asp-controller="Dashboard" asp-action="Index" asp-route-page="@(pagingVM.Page + 1)">
                        @LanguageService.GetKey("PaginationResults_Next")
                    </a>
                    <span class="text-muted text-small">@LanguageService.GetKey("PaginationResults") @pagingVM.ResultStart - @pagingVM.ResultEnd @LanguageService.GetKey("PaginationResults_of") @pagingVM.TotalItems</span>
                }
            </div>
        </div>
    }
}