@*
    List of available notes
*@

@{
    ViewData["Title"] = "Notes";
}

@model NoteSummariesListViewModel

@if (!Model.NotesSummaries.Any())
{
    <h2>There are no notes yet.</h2>
}
else
{
    var notesSummaries = Model.NotesSummaries;
    var pagingVM = Model.PagingViewModel;

    <h1>Notes</h1>
    foreach (var noteSummary in notesSummaries)
    {
        var note = noteSummary.Note;
        if (note == null)
        {
            continue;
        }

        var thread = noteSummary.Thread;
        var firstImage = noteSummary.FirstImage;
        var author = noteSummary.Author;
        var authorProfilePicture = noteSummary.ProfilePicture;

        <div>
            <div>
                @if (author != null)
                {
                    <img width="100" height="100" src="@ImagePathHelper.GetPath(@authorProfilePicture.ImageFileName)" asp-append-version="true"/>
                    <a asp-controller="Users" asp-action="Details" asp-route-userId="@author.Id" class="btn btn-sm btn-outline-secondary">Author: @author.UserName</a>
                }
                else
                {
                    <img width="100" height="100" src="@ImagePathHelper.GetDefaultImagePath()" asp-append-version="true"/>
                    <a class="btn btn-sm btn-outline-secondary">Unknown author</a>
                }
            </div>

            <h3>@note.Title</h3>
            <h4>@note.Description</h4>
            @if (firstImage != null)
            {
                <img src="@ImagePathHelper.GetPath(firstImage.ImageFileName)" asp-append-version="true"/>
            }

            @if (thread != null)
            {
                <h4>Thread:</h4>
                <a asp-controller="Threads" asp-action="GetByThread" asp-route-thread="@thread.Thread" class="btn btn-sm btn-outline-secondary">@thread.Thread</a>
            }

            <div>
                @if (User.IsAdmin() ||
                    User.IsOwner(note))
                {
                    <a asp-controller="Notes" asp-action="Edit" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-controller="Notes" asp-action="Delete" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">Delete</a>
                }

                <a asp-controller="Notes" asp-action="Details" asp-route-id="@note.NoteId" class="btn btn-sm btn-outline-secondary">View</a>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            @if (pagingVM.IsValidPage)
            {
                <a type="button" class="btn btn-sm btn-outline-primary @pagingVM.PrevDisabled" asp-action="Index" asp-route-page="@(pagingVM.Page - 1)">
                    Prev
                </a>
                <a type="button" class="btn btn-sm btn-outline-primary @pagingVM.NextDisabled" asp-action="Index" asp-route-page="@(pagingVM.Page + 1)">
                    Next
                </a>
                <span class="text-muted text-small">Results @pagingVM.ResultStart - @pagingVM.ResultEnd of @pagingVM.TotalItems</span>
            }
        </div>
    </div>
}