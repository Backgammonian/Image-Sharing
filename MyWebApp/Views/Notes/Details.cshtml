@*
    Details of selected Note
*@

@model NoteDetailsViewModel

@if (Model == null)
{
    <h2>There is nothing.</h2>
}
else
{
    <img width="100" height="100" src="@ImagePathHelper.GetPath(Model.ProfilePicture.ImageFileName)" asp-append-version="true"/>
    <a asp-controller="Users" asp-action="Info" asp-route-id="@Model.Author.Id" class="btn btn-sm btn-outline-secondary">Author: @Model.Author.UserName</a>
    <h2>@Model.Note.Title</h2>
    <h3>@Model.Note.Description</h3>
    @foreach (var image in Model.Images)
    {
        <img src="@($"~/images/{image.ImageFileName}")" asp-append-version="true"/>
    }
    <h3>Rating: @Model.Score</h3>
    <h4>Tags:</h4>
    @foreach (var tag in Model.Tags)
    {
        <a asp-controller="Tags" asp-action="GetByTag" asp-route-tag="@tag" class="btn btn-sm btn-outline-secondary">@tag</a>
    }
    <div>
        <a asp-controller="Notes" asp-action="Edit" asp-route-id="@Model.Note.NoteId" class="btn btn-sm btn-outline-secondary">Edit</a>
        <a asp-controller="Notes" asp-action="Delete" asp-route-id="@Model.Note.NoteId" class="btn btn-sm btn-outline-secondary">Delete</a>
    </div>
}