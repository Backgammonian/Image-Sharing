@*
    User profile
*@

@model UserDetailsViewModel

@{
    var user = Model.User;
    var profilePicture = Model.ProfilePicture;

    @if (user == null)
    {
        <h2>This user doesn't exist.</h2>
    }
    else
    {
        <div>
            <img width="100" height="100" src="@ImagePathHelper.GetPath(profilePicture.ImageFileName)" asp-append-version="true"/>
            <h2>@user.UserName</h2>
            <h4>@user.Status</h4>
            <a asp-controller="Users" asp-action="Notes" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">View Notes</a>
            <a asp-controller="Users" asp-action="Ratings" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">View Ratings</a>
        </div>
    }
}