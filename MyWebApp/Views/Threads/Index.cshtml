@*
    All threads list
*@

@{
    ViewData["Title"] = "All threads";
}

@model AvailableThreadsViewModel

@if (!Model.Threads.Any())
{
    <h2>There are no threads yet.</h2>
}
else
{
    var threads = Model.Threads;

    <h1>All threads</h1>
    foreach (var thread in threads)
    {
        <div>
            <a asp-controller="Threads" asp-action="GetByThread" asp-route-thread="@thread.Thread" class="btn btn-sm btn-outline-secondary">@thread.Thread</a>
        </div>
    }
}