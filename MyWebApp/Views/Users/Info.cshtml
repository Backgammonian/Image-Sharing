@*
    User profile
*@

@model UserDetails

@if (Model == null)
{
    <h2>This user doesn't exist.</h2>
}
else
{
    <div>
        <img width="100" height="100" src="@($"~/images/{Model.ProfilePicture.ImageFileName}")" asp-append-version="true"/>
        <h2>@Model.User.Name</h2>
        <h4>@Model.User.Status</h4>
        <a asp-controller="Users" asp-action="Notes" asp-route-id="@Model.User.UserId" class="btn btn-sm btn-outline-secondary">View Notes</a>
        <a asp-controller="Users" asp-action="Ratings" asp-route-id="@Model.User.UserId" class="btn btn-sm btn-outline-secondary">View Ratings</a>
    </div>
}