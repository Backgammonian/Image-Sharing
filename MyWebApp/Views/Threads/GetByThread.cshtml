@*
    List of notes marked with the certain thread
*@

@inject LanguageService LanguageService

@{
    ViewData["Title"] = LanguageService.GetKey("GetByThread_Title");
}

@model NotesFromThreadViewModel

@{
    var selectedThread = Model.Thread;
    var threadNotesDetails = Model.NotesDetails;
    var pagingVM = Model.PagingViewModel;

    if (selectedThread == string.Empty ||
        !threadNotesDetails.Any())
    {
        <h3>@LanguageService.GetKey("GetByThread_Nothing")</h3>
    }
    else
    {
        ViewData["Title"] = $"{LanguageService.GetKey("DeleteNote_Thread")}: {selectedThread}";

        <h2>@LanguageService.GetKey("GetByThread_NotesFromThread"): <b>@selectedThread</b></h2>

        var noteNumber = 0;
        foreach (var threadNoteDetail in threadNotesDetails)
        {
            var note = threadNoteDetail.Note;
            if (note == null)
            {
                continue;
            }

            var thread = threadNoteDetail.Thread;
            var images = threadNoteDetail.Images;
            var author = threadNoteDetail.Author;
            var authorProfilePicture = threadNoteDetail.ProfilePicture;

            <div>
                <div>
                    @if (authorProfilePicture != null)
                    {
                        <div class="thumb">
                            <a class="fancybox-frame profile-picture" data-fancybox href="@ImagePathHelper.GetHref(authorProfilePicture.ImageFileName)">
                                <img src="@ImagePathHelper.GetPath(authorProfilePicture.ImageFileName)" asp-append-version="true">
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="thumb">
                            <a class="fancybox-frame profile-picture" data-fancybox href="@ImagePathHelper.GetDefaultImageHref()">
                                <img src="@ImagePathHelper.GetDefaultImagePath()" asp-append-version="true">
                            </a>
                        </div>
                    }

                    @if (author != null)
                    {
                        <a asp-controller="Users" asp-action="Details" asp-route-userId="@author.Id" class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("DeleteNote_Author"): @author.UserName</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("DeleteNote_UnknownAuthor")</a>
                    }
                </div>

                <h3>@note.Title</h3>
                <h4>@note.Description</h4>

                <div class="gallery-column">
                    @foreach (var image in images)
                    {
                        var imagePath = ImagePathHelper.GetPath(image.ImageFileName);
                        var href = ImagePathHelper.GetHref(image.ImageFileName);

                        <div class="thumb">
                            <a class="fancybox-frame" data-fancybox="gallery-@noteNumber" href="@href">
                                <img src="@imagePath" asp-append-version="true">
                            </a>
                        </div>
                    }
                </div>

                @if (thread != null)
                {
                    <h4>@LanguageService.GetKey("Thread"):</h4>
                    <a asp-controller="Threads" asp-action="GetByThread" asp-route-thread="@thread.Thread" class="btn btn-sm btn-outline-secondary">@thread.Thread</a>
                }

                <div>
                    @if (User.IsAdmin() ||
                        User.IsOwner(note))
                    {
                        <a asp-controller="Notes" asp-action="Edit" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("Edit")</a>
                        <a asp-controller="Notes" asp-action="Delete" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("Delete")</a>
                    }

                    <a asp-controller="Notes" asp-action="Details" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">@LanguageService.GetKey("Details")</a>
                </div>
            </div>

            noteNumber += 1;
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                @if (pagingVM.IsValidPage)
                {
                    <a type="button" class="btn btn-sm btn-outline-primary @pagingVM.PrevDisabled" asp-action="GetByThread" asp-route-page="@(pagingVM.Page - 1)">
                        @LanguageService.GetKey("PaginationResults_Prev")
                    </a>
                    <a type="button" class="btn btn-sm btn-outline-primary @pagingVM.NextDisabled" asp-action="GetByThread" asp-route-page="@(pagingVM.Page + 1)">
                        @LanguageService.GetKey("PaginationResults_Next")
                    </a>
                    <span class="text-muted text-small">@LanguageService.GetKey("PaginationResults") @pagingVM.ResultStart - @pagingVM.ResultEnd @LanguageService.GetKey("PaginationResults_of") @pagingVM.TotalItems</span>
                }
            </div>
        </div>
    }
}