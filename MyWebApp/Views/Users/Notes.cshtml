@*
    List of User's Notes
*@

@model UserNotes

@if (Model == null)
{
    <h2>This user doesn't exist.</h2>
}
else
{
    var user = Model.User;
    var notes = Model.Notes;
    var profilePicture = Model.ProfilePicture;

    <img width="100" height="100" src="@($"~/images/{profilePicture.ImageFileName}")" asp-append-version="true"/>
    <h2>@user.Name</h2>
    <h4>@user.Status</h4>
    <h3>Notes of user @user.Name</h3>
    @foreach (var note in notes)
    {
        <h3>@note.Title</h3>
        <h4>@note.Description</h4>
        @foreach (var image in note.Images)
        {
            <img src="@($"~/images/{image.ImageFileName}")" asp-append-version="true"/>
        }
        <h4>Rating: @note.Score</h4>
        <h4>Tags:</h4>
        @foreach (var tag in note.Tags)
        {
            <a asp-controller="Tags" asp-action="GetByTag" asp-route-tag="@tag" class="btn btn-sm btn-outline-secondary">@tag</a>
        }
    }
}