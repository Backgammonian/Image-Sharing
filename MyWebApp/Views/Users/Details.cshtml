@*
    User's profile
*@

@{
    ViewData["Title"] = "User's profile";
}

@model UserDetailsViewModel

@{
    var user = Model.User;
    var profilePicture = Model.ProfilePicture;

    @if (user == null)
    {
        <h2>This user doesn't exist.</h2>
    }
    else
    {
        ViewData["Title"] = $"{user.UserName}'s profile";

        <div>
            <div class="thumb">
                <a class="fancybox-frame profile-picture" data-fancybox href="@ImagePathHelper.GetHref(profilePicture.ImageFileName)">
                    <img src="@ImagePathHelper.GetPath(profilePicture.ImageFileName)" asp-append-version="true">
                </a>
            </div>

            <h3>@user.UserName</h3>
            <h4>@user.Status</h4>

            <a asp-controller="Users" asp-action="Notes" asp-route-userId="@user.Id" class="btn btn-sm btn-outline-secondary">View Notes</a>
        </div>
    }
}