@*
    List of notes marked with the certain thread
*@

@{
    ViewData["Title"] = "Thread";
}

@model NotesFromThreadViewModel

@{
    var selectedThread = Model.Thread;
    var threadNotesDetails = Model.NotesDetails;

    if (selectedThread == string.Empty ||
        !threadNotesDetails.Any())
    {
        <div class="row">
            <span>
                There aren't any notes.
            </span>
        </div>
    }
    else
    {
        ViewData["Title"] = $"Thread: {selectedThread}";

        <h1>Notes from thread: <b>@selectedThread</b></h1>

        @foreach (var threadNoteDetail in threadNotesDetails)
        {
            var note = threadNoteDetail.Note;
            if (note == null)
            {
                continue;
            }

            var thread = threadNoteDetail.Thread;
            var images = threadNoteDetail.Images;
            var author = threadNoteDetail.Author;
            var authorProfilePicture = threadNoteDetail.ProfilePicture;

            <div>
                <div>
                    @if (author != null)
                    {
                        <img width="100" height="100" src="@ImagePathHelper.GetPath(authorProfilePicture.ImageFileName)" asp-append-version="true"/>
                        <a asp-controller="Users" asp-action="Details" asp-route-userId="@author.Id" class="btn btn-sm btn-outline-secondary">Author: @author.UserName</a>
                    }
                    else
                    {
                        <img width="100" height="100" src="@ImagePathHelper.GetDefaultImagePath()" asp-append-version="true"/>
                        <a class="btn btn-sm btn-outline-secondary">Unknown author</a>
                    }
                </div>

                <h3>@note.Title</h3>
                <h4>@note.Description</h4>

                @foreach (var image in images)
                {
                    <img src="@ImagePathHelper.GetPath(image.ImageFileName)" asp-append-version="true"/>
                }

                <h4>Thread:</h4>
                <a asp-controller="Threads" asp-action="GetByThread" asp-route-thread="@thread" class="btn btn-sm btn-outline-secondary">@thread</a>

                <div>
                    @if (User.IsAdmin() ||
                        User.IsOwner(note))
                    {
                        <a asp-controller="Notes" asp-action="Edit" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-controller="Notes" asp-action="Delete" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">Delete</a>
                    }

                    <a asp-controller="Notes" asp-action="Details" asp-route-noteId="@note.NoteId" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
            </div>
        }
    }
}